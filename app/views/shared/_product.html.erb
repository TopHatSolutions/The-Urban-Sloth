<div class="product">
  <div class="product_img">
    <%= link_to(image_tag(product.image), product)%>
  </div>
  <h5><%= link_to(product.name, product) %></h5>
  <ul>
    <li><%= product.sell_point_1 %></li>
    <li><%= product.sell_point_2 %></li>
    <li><%= product.sell_point_3 %></li>
  </ul>
  <h4><%= number_to_currency(product.price) %></h4>
  <%= link_to 'Add to Cart', add_to_cart_path(product.id), method: 'post', class: 'btn btn-danger' %>
</div>
