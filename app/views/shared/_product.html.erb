<div class="product">
  <%= link_to image_tag(product.image, :border=>0), :action => 'show', :controller => 'products'%>
  <h5><%= link_to(product.name, product_path(product)) %></h5>
  <ul>
    <li><%= product.sell_point_1 %></li>
    <li><%= product.sell_point_2 %></li>
    <li><%= product.sell_point_3 %></li>
  </ul>
  <h4><%= number_to_currency(product.price) %></h4>
</div>
