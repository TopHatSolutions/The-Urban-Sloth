<div id="search_bar">
  <h4>Search</h4>
  <form method="post">
    <select name="category">
      <option>All Categories</option>
      <% @categories.each do |category| %>
        <option value="<%= category.id %>"><%= category.name %></option>
      <% end %>
    </select>
    <input type="text" name="search_parameters" />
    <input type="submit" name="submit" hidden />
  </form>
</div>
