<div id="sale_products_scroll_bar">
  <div id="c-carousel">
    <div id="wrapper">
      <div id="carousel">
        <% sale_items.each do |item| %>
          <div>
            <img src="../../<%= item.image %>" alt="<%= item.name %>" width="100" height="100" />
            <span><%= item.name %></span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
