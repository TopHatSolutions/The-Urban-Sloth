<h1>Listing orders</h1>

<table>
  <thead>
    <tr>
      <th>Belongs to</th>
      <th>Has many</th>
      <th>Status</th>
      <th>Pst rate</th>
      <th>Gst rate</th>
      <th>Hst rate</th>
      <th>Total</th>
      <th>Sub total</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.belongs_to %></td>
        <td><%= order.has_many %></td>
        <td><%= order.status %></td>
        <td><%= order.pst_rate %></td>
        <td><%= order.gst_rate %></td>
        <td><%= order.hst_rate %></td>
        <td><%= order.total %></td>
        <td><%= order.sub_total %></td>
        <td><%= order.customer_id %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

